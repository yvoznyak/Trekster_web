@model TransactionVM

@{
    ViewData["Title"] = "Редагування транзакції";
}


<h2 style="margin-top: 3rem;"><center>Редагувати транзакцію</center></h2>

<hr />

<center>
    <div class="row" style="justify-content: center;">
        <div class="col-md-4">
            <form asp-action="EditTransaction">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group" style="margin-bottom: 1rem;">
                    <label asp-for="AccountsAndCurency" class="control-label">Рахунок</label>
                    <select asp-for="AccountsAndCurency" class="form-control js-example-basic-single" asp-items="ViewBag.AccountsAndCurency" style="margin-bottom: 0.5rem;">
                    </select>
                </div>
                <div class="form-group" style="margin-bottom: 1rem;">
                    <label asp-for="CategoryId" class="control-label">Категорія</label>
                    <select asp-for="CategoryId" class="form-control js-example-basic-single" asp-items="ViewBag.Categories" style="margin-bottom: 0.5rem;">
                    </select>
                </div>
                <div class="form-group" style="margin-bottom: 1rem;">
                    <label asp-for="Sum" class="control-label"></label>
                    <input asp-for="Sum" class="form-control" style="margin-bottom: 0.5rem;" />
                    <span asp-validation-for="Sum" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Зберегти" class="btn btn-primary" style="padding-right: 4rem; padding-left: 4rem;" />
                </div>
            </form>
        </div>
    </div>

    <div style="margin-top: 1rem;">
        <a asp-action="Index">Назад на головну</a>
    </div>
</center>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
