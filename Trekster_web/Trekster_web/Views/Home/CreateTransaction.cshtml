@model TransactionVM

@{
    ViewData["Title"] = "Додати транзакцію";
}

<h2 style="margin-top: 3rem;"><center>Додати транзакцію</center></h2>

<hr />

<center>
    <div class="row" style="justify-content: center;">
        <div class="col-md-4">
            <form asp-action="CreateTransaction">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" style="margin-bottom: 1rem;">
                    <label asp-for="AccountsAndCurency" class="control-label" style="margin-bottom: 0.5rem;">Рахунок</label>
                    <select asp-for="AccountsAndCurency" class="form-control js-example-basic-single" asp-items="ViewBag.AccountsAndCurency">
                    </select>
                </div>
                <div class="form-group" style="margin-bottom: 1rem;">
                    <label asp-for="CategoryId" class="control-label" style="margin-bottom: 0.5rem;">Категорія</label>
                    <select asp-for="CategoryId" class="form-control js-example-basic-single" asp-items="ViewBag.Categories">
                    </select>
                </div>
                <div class="form-group" style="margin-bottom: 1rem;">
                    <label asp-for="Sum" class="control-label" style="margin-bottom: 0.5rem;"></label>
                    <input asp-for="Sum" class="form-control" />
                    <span asp-validation-for="Sum" class="text-danger"></span>
                </div>
                <form asp-action="Create">
                    <input type="submit" value="Додати" class="btn btn-primary" style="padding-right: 4rem; padding-left: 4rem;">
                </form>
            </form>
        </div>
    </div>

    <div style="margin-top: 1rem;">
        <a asp-action="Index">Назад на головну</a>
    </div>
</center>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
