@model TransactionVM

@{
    ViewData["Title"] = "Додати транзакцію";
}

<h2><center>Додати транзакцію</center></h2>

<hr />

<center>
    <div class="row centered">
        <div class="col-md-4 col-sm-7 col-8">
            <form asp-action="CreateTransaction">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="AccountsAndCurency" class="control-label">Рахунок</label>
                    <select asp-for="AccountsAndCurency" class="form-control js-example-basic-single" asp-items="ViewBag.AccountsAndCurency">
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label">Категорія</label>
                    <select asp-for="CategoryId" class="form-control js-example-basic-single" asp-items="ViewBag.Categories">
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Sum" class="control-label">Сума</label>
                    <input asp-for="Sum" class="form-control" />
                    <span asp-validation-for="Sum" class="text-danger"></span>
                </div>
                <form asp-action="Create">
                    <input type="submit" value="Додати" class="btn btn-primary btn-wide">
                </form>
            </form>
        </div>
    </div>

    <div style="margin-top: 1rem;">
        <a asp-action="Index">Назад на головну</a>
    </div>
</center>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
