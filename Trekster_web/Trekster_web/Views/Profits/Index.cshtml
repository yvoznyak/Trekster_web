@model ProfitsVM

@{
    ViewData["Title"] = "Доходи";
}

<h2 style="margin-top: 3rem; margin-bottom: 1rem;"><center>Доходи</center></h2>

<hr />
@foreach (var item in Model.ProfitsByCategory)
{
    <div style="margin-bottom: 1rem !important; border: 2px solid #28a745; padding: 10px; margin-bottom: 10px; border-radius: 10px; max-width: 60%; background-color: #d4edda; color: #155724;">
        @item
    </div>
}

<div style="margin-top: 2rem !important; border: 2px solid #17a2b8; padding: 10px; margin-bottom: 10px; border-radius: 10px; max-width: 60%; background-color: #cce5ff; color: #004085;">
    @Html.DisplayFor(model => model.Summary)
</div>
