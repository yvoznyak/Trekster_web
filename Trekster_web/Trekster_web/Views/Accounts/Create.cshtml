@model AccountsVM

@{
    ViewData["Title"] = "Додати рахунок";
}

<h1>Create</h1>

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Назва</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            @foreach (var item in Model.StartBalances)
            {
                <div class="form-group">
                    <label asp-for="@item.Value" class="control-label">@item.Key</label>
                    <input asp-for="@item.Value" name="StartBalances[@item.Key]" class="form-control" />
                    <span asp-validation-for="@item.Value" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
