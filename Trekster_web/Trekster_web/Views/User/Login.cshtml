@model UserVM
@{
    ViewData["Title"] = "Авторизація";
}

<h2><center>Авторизація</center></h2>

<hr />

<div asp-validation-summary="All" class="text-danger"></div>

<center>
    <form asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" class="col-md-4 col-sm-7 col-8">
        <div class="form-group">
            <label asp-for="Email">Електронна пошта</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password">Пароль</label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-wide">Увійти</button>
        </div>

        <div class="form-group">
            <a asp-action="ForgotPassword">Забули пароль</a>
        </div>

        <a asp-controller="User" asp-action="Register">Зареєструватися</a>
    </form>
</center>

