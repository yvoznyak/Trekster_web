@model BusinessLogic.Models.ForgotPasswordModel
@{
    ViewData["Title"] = "Забули пароль";
}

<h2 style="margin-top: 3rem;"><center>Забули пароль</center></h2>

<hr />

<div asp-validation-summary="All" class="text-danger"></div>

<center>
    <div class="row" style="display: flex; justify-content: center;">
        <div class="col-md-4">
            <form asp-action="ForgotPassword">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" style="margin-bottom: 1rem;">
                    <label asp-for="Email" class="control-label" style="margin-bottom: 0.5rem;">Електронна пошта</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <form asp-action="Submit">
                    <input type="submit" value="Надіслати" class="btn btn-primary">
                </form>
            </form>
        </div>
    </div>
</center>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}