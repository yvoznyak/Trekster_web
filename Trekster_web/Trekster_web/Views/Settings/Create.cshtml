@model CategoryVM

@{
    ViewData["Title"] = "Додати категорію";
}

<h1>Create</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div>
                <label>Оберіть тип категорії</label>
                <label>
                    <input asp-for="Type" type="radio" name="Type" value="1" checked /> Дохід
                </label>
                <label>
                    <input asp-for="Type" type="radio" name="Type" value="-1" /> Витрата
                </label>
            </div>
            <span asp-validation-for="Type"></span>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Categories">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
